{% extends 'layout.njk' %}
{% import 'parts/cards.njk' as cards %}

{% block content %}
  {% call cards.render('', 'order-success containder') %}    
    <div class="success-lottie"></div>
    <h2>Pedido realizado com sucesso.</h2>
    <p>
      Aguarde a resposta do vendedor no seu e-mail cadastrado.
    </p>
    <a href="/products/search">Comprar mais</a>
  {% endcall %}

  <script src="/lottie.min.js" type="text/javascript"></script>
  
  <script>
    const element = document.querySelector('.success-lottie');

    lottie.loadAnimation({
      container: element, // the dom element that will contain the animation
      renderer: 'svg',
      loop: false,
      autoplay: true,
      path: '/9917-success.json' // the path to the animation json
    }).setSpeed(3);
  </script>
{% endblock %}
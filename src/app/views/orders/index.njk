{% extends 'layout.njk' %}
{% import 'parts/cards.njk' as cards %}

{% block content %}

  {% if (orders.length < 1) %}

    {% call cards.render('', 'cart-empity container') %}
      <p>Nenhum Pedido</p>
      <a href="/products/search" class="button">Comprar agora</a>
    {% endcall %}

  {% else %}

    {% call cards.render('Meus Pedidos', 'orders container') %}
      <div class="items">
        {% for order in orders %}
          <div class="item-container">
            <div class="item">
              <img src="{{order.product.img}}" alt="Imagem do Produto {{order.product.name}}">
              <div class="title">{{order.name}}</div>
              <div class="price">{{order.formattedPrice}}</div>
              <div class="updated-at">{{order.formattedPrice}}</div>
            </div>

            <div class="quantity">
              Qtd. {{order.quantity}}
            </div>

            <div class="total">
              {{order.formattedTotal}}
            </div>

            <div class="status">
              {{order.formattedStatus}}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endcall %}
    
  {% endif %}

{% endblock %}
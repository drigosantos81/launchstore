{% extends 'layout.njk' %}
{% import 'parts/cards.njk' as cards %}

{% block content %}
  {% call cards.render('Meus An√∫ncios', 'users-ads containder') %}    
    <div class="items">
      {% for product in products %}
        <div class="item">
          <div 
            class="image"
            style="background-image: url('{{product.img if product.img else '//placehold.it/75x75?text=Sem imagem'}}')"
          >
          </div>
{# style="background-image: url({{product.img}})" #}
          <div class="info">
            <div class="title">{{product.name}}</div>
            <div class="price">{{product.formattedPrice}}</div>
            <div class="published">Publicado em {{product.CreatedAt}}</div>

            <div class="actions">
              <a href="/products/{{product.id}}/edit">Editar</a>
              <a href="/products/{{product.id}}"> Ver</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endcall %}
{% endblock %}